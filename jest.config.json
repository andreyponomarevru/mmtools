{
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/?(*.)+(spec|test).+(ts|tsx|js)"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "transform": {
    "^.+\\.(ts|tsx)$": ["ts-jest", { "useESM": true }]
  },
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "extensionsToTreatAsEsm": [".ts"],
  "setupFilesAfterEnv": ["<rootDir>/setup-jest.js"]
}
